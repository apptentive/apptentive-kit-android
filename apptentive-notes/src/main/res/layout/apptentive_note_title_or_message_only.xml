<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/apptentive_note_alternate_text"
        style="?apptentiveRichNoteAlternateTextStyle"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/apptentive_note_title_with_message_image"
        style="?apptentiveNoteHeaderImageStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true" />

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            style="?apptentiveNoteTitleOrMessageOnlyImageStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/apptentive_note_title_or_message_only"
            style="?apptentiveNoteTitleOrMessageOnlyTextStyle"
            android:layout_width="match_parent"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>